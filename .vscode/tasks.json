    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "command": "${workspaceFolder}/build.ps1",
            "args": ["-Reload"],
            "problemMatcher": [
                "$PapyrusCompiler"
            ]
        }
    ]
}